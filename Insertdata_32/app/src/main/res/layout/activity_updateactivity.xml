<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ffb380"
    tools:context="com.example.hasantarek.insertdata_32.Updateactivity">

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/sname"
        android:hint="name"
        android:layout_alignParentLeft="true"
        />
    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:onClick="search"
        android:background="#e65c00"
        android:text="Search"
        android:id="@+id/bsearch"
        android:layout_toRightOf="@+id/sname"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Contact"
        android:layout_below="@+id/bsearch"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/utext"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/uname"
        android:layout_below="@+id/utext"
        android:layout_marginTop="20dp"
        android:hint="Name"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/umobile"
        android:layout_below="@+id/uname"
        android:layout_marginTop="10dp"
        android:hint="Mobile"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/uemail"
        android:layout_below="@+id/umobile"
        android:layout_marginTop="10dp"
        android:hint="Email"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:onClick="update"
        android:id="@+id/bupdate"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/uemail"
        android:layout_marginTop="30dp"
        android:background="#e65c00"
        />

</RelativeLayout>
